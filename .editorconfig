# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# Templates are ignored by linting and type checking
[templates/**]
# These files are templates and should not be linted or type-checked
# They are copied and processed by create scripts

