{
  "name": "@image-workshop/mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Image Workshop - Routes tool calls to individual Lambda functions",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "build": "esbuild src/index.ts --bundle --platform=node --target=node24 --format=cjs --outfile=dist/index.js --external:\"@aws-sdk/*\" --minify --sourcemap",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@image-workshop/aws-config": "workspace:*",
    "@image-workshop/mcp-tools": "workspace:*",
    "@aws-sdk/client-lambda": "^3.700.0"
  },
  "devDependencies": {}
}

