{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["biome.json", "tsconfig.json", "vitest.config.ts"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "cache": true
    },
    "build:functions": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "lint:ts": {
      "outputs": [],
      "cache": true
    },
    "lint:ts:fix": {
      "outputs": [],
      "cache": false
    },
    "lint:md": {
      "outputs": [],
      "cache": true
    },
    "lint:md:fix": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}

